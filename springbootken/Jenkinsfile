pipeline {
	agent {
		docker { image 'openjdk:8-jdk-alpine' }
	}
	environment {
        DOCKER_HOST = 'gateway-ip-addr'
    }
    stages {
        stage('Build') {
            steps {
            	dir('springbootken') {
            		sh 'chmod +x mvnw'
            		sh './mvnw install:install-file -DgroupId=com.oracle -DartifactId=ojdbc6 -Dversion=11.2.0.3 -Dpackaging=jar -Dfile=ojdbc6.jar -DgeneratePom=true'
            		
            		sh './mvnw spring-boot:build-image'
            		//sh './mvnw clean install'
					//sh './mvnw com.google.cloud.tools:jib-maven-plugin:build -Dimage=spring/springbootken'
            	}
            }
        }
    }
}